# =========================
# Configuración Odoo
# =========================
ODOO_URL=http://localhost:8069
ODOO_DB=odoo14
ODOO_USER=admin
ODOO_PASSWORD=changeme
ODOO_COMPANY_ID=1

# =========================
# Gmail IMAP
# =========================
# Servidor IMAP
GMAIL_IMAP=imap.gmail.com
# Usuario y contraseña (usar contraseña de aplicación si tienes 2FA)
GMAIL_USER=tu_correo@gmail.com
GMAIL_PASSWORD=tu_contraseña_app

# Etiquetas de Gmail a monitorizar (separadas por coma)
# Ejemplo: "Albaranes compra Varona,Albaranes compra gpautomocion"
GMAIL_LABELS=

# Alternativa: etiquetas específicas por proveedor
# GMAIL_LABEL_VARONA=Albaranes compra Varona
# GMAIL_LABEL_GPA=Albaranes compra gpautomocion

# Descargar solo correos no leídos
GMAIL_UNSEEN_ONLY=true
# Marcar como leídos los mensajes procesados
GMAIL_MARK_SEEN=false

# Activar modo debug para Gmail
GMAIL_DEBUG=false

# =========================
# Rutas de entrada/salida
# =========================
# Carpeta donde se guardan PDFs descargados de Gmail
INPUT_DIR=./inbox
# Carpeta donde se generan los CSV
OUTPUT_DIR=./out

# =========================
# Logging
# =========================
# Nivel de log: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Carpeta de logs
LOG_DIR=./logs
